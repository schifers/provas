<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

	<url-mapping id="index">
		<pattern value="/" />
		<view-id value="/index.xhtml" />
	</url-mapping>

	<url-mapping id="login">
		<pattern value="/login" />
		<view-id value="/index.xhtml" />
	</url-mapping>

	<url-mapping id="signup">
		<pattern value="/signup" />
		<view-id value="signup.xhtml" />
	</url-mapping>

	<url-mapping id="user-dashboard">
		<pattern value="/user/dashboard" />
		<view-id value="/user/dashboard.xhtml" />
	</url-mapping>

	<url-mapping id="admin-dashboard">
		<pattern value="/admin/dashboard" />
		<view-id value="/admin/dashboard.xhtml" />
	</url-mapping>

	<url-mapping id="admin-menu">
		<pattern value="/admin/menu" />
		<view-id value="/admin/menu/menu-list.xhtml" />
	</url-mapping>

</pretty-config>